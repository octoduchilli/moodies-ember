{{#if __fetchData.isRunning}}
  <div class="{{styleNamespace}}__topbar-skeleton flex ali-start work">
    <div class="div-poster"></div>
    <div class="left--content-poster flex col">
      <h1 class="title"></h1>
      <p class="info"></p>
      <p class="info"></p>
      <p class="info"></p>
      <p class="biography"></p>
    </div>
  </div>
  <div class="{{styleNamespace}}__separator"></div>
{{else}}
  <div class="{{styleNamespace}}__main-background" style="background-image: url(https://image.tmdb.org/t/p/original{{backgroundPath}})"></div>
  <div class="{{styleNamespace}}__topbar flex ali-start work">
    <div {{action "togglePoster" on="click"}} class="div-poster {{if isShowingPoster 'popup'}}">
      <img class="poster" src="{{concat (if isShowingPoster 'https://image.tmdb.org/t/p/original' 'https://image.tmdb.org/t/p/w500') person.profile_path}}" alt=" " onerror="this.src='/img/no-picture.png'; this.onerror=''">
    </div>
    <div class="left--content-poster flex col">
      <h1 class="title josefin">{{person.name}}</h1>
      <p class="knownfor">{{knownFor}}</p>
      <p class="birthday">Date de naissance {{if person.birthday (moment-format person.birthday "Do MMMM YYYY") 'Inconnue'}}</p>
      {{#if person.place_of_birth}}
        <p class="placebirth">Lieu de naissance {{person.place_of_birth}}</p>
      {{/if}}
      {{#if person.deathday}}
        <p class="deathday">Date de décès {{moment-format person.deathday "Do MMMM YYYY"}}</p>
      {{/if}}
      <p class="biography josefin">{{if person.biography person.biography 'Aucune biographie'}}</p>
    </div>
  </div>
  <div class="{{styleNamespace}}__separator"></div>
  <div class="{{styleNamespace}}__movies">
    <h1 class="title">À également joué</h1>
    {{#if (gt moviesCast.length 0)}}
      {{horizontal-list type='movie' onClick=(action "scrollTop") items=moviesCast}}
    {{else}}
      <p class="no-results">Aucun film</p>
    {{/if}}
  </div>
  <div class="{{styleNamespace}}__movies">
    <h1 class="title">À contribué</h1>
    {{#if (gt moviesCrew.length 0)}}
      {{horizontal-list type='movie' onClick=(action "scrollTop") items=moviesCrew}}
    {{else}}
      <p class="no-results">Aucun film</p>
    {{/if}}
  </div>
{{/if}}