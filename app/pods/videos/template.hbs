<div class="videos work">
  <div class="videos__section">
    <h1 class="section__title">Vidéos du film <span class="bold">{{model.title}}</span></h1>
    <h2 class="section__second-title">Actuellement {{model.videos.length}} {{if (lt 1 model.videos.length) 'vidéos disponibles' 'vidéo disponible'}}</h2>
    <ul class="section__video-list">
      {{#each model.videos as |video|}}
        {{#if (eq video.site "YouTube")}}
          <li class="video-list__video" {{action (mut showVideo) video.key on="click"}}>{{video.name}}</li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
  {{#if showVideo}}
    <div class="videos__show-video" {{action (mut showVideo) null on="click"}}>
      <iframe class="show-video__video" src="https://www.youtube.com/embed/{{showVideo}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      <div class="show-video__close-message">fermer</div>
    </div>
  {{/if}}
</div>